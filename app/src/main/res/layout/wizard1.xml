<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/constraintLayout2">

    <TextView
        android:text="@string/intro1_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView4"
        android:layout_weight="0.08"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        fontPath="fonts/Nexa-Bold.ttf"
        tools:ignore="MissingPrefix"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        android:layout_marginTop="72dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/intro1"
        android:id="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        android:layout_marginTop="48dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2" />

    <TextView
        android:text="@string/intro1"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_height="200dp"
        android:layout_width="288dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>