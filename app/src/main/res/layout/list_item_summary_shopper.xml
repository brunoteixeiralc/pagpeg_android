<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/img"
            android:src="@drawable/produto_img"
            tools:ignore="ContentDescription"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:indeterminateTint="@color/colorPrimary"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Cerveja Skol 18 latinhas"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/product_cart"
                android:src="@drawable/cart_delete"
                tools:ignore="ContentDescription"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>

        </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Pedido:"
              android:padding="5dp"/>

         <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="2dp"
              android:padding="2dp">

             <TextView
                 android:background="@color/colorPrimary"
                 android:id="@+id/quantity"
                 android:layout_width="0dp"
                 android:layout_weight="0.2"
                 android:layout_height="wrap_content"
                 android:text="0 x"
                 android:padding="2dp"
                 android:textSize="12sp"
                 android:gravity="center"
                 fontPath="fonts/Nexa-Bold.ttf"
                 tools:ignore="MissingPrefix"
                 android:textColor="@color/white"/>

             <TextView
                 android:background="@color/colorPrimary"
                 android:id="@+id/price_unit_user"
                 android:layout_width="0dp"
                 android:layout_weight="0.3"
                 android:layout_height="wrap_content"
                 android:text="R$ 0.00"
                 android:padding="2dp"
                 android:textSize="12sp"
                 android:gravity="center|left"
                 fontPath="fonts/Nexa-Bold.ttf"
                 tools:ignore="MissingPrefix"
                 android:textColor="@color/white"/>

             <TextView
                 android:id="@+id/price"
                 android:layout_width="0dp"
                 android:layout_weight="0.6"
                 android:layout_height="wrap_content"
                 android:text="@string/price"
                 android:textSize="12sp"
                 fontPath="fonts/Nexa-Bold.ttf"
                 tools:ignore="MissingPrefix"
                 android:textColor="@color/colorPrimary"
                 android:layout_marginLeft="5dp"/>

         </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shopper pedido:"
                android:padding="5dp"
                android:id="@+id/textView7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

             <TextView
                 android:id="@+id/product_not_find"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="NÃ£o foi encontrado"
                 android:textColor="@color/colorPrimary"
                 android:visibility="gone"/>

             <LinearLayout
                 android:id="@+id/ll"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                <TextView
                    android:background="@color/colorPrimary"
                    android:id="@+id/quantity_shopper"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="0 x"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    fontPath="fonts/Nexa-Bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/white"/>

                 <TextView
                     android:background="@color/colorPrimary"
                     android:id="@+id/price_unit_shopper"
                     android:layout_width="0dp"
                     android:layout_weight="0.3"
                     android:layout_height="wrap_content"
                     android:text="R$ 0.00"
                     android:padding="2dp"
                     android:textSize="12sp"
                     android:gravity="center|left"
                     fontPath="fonts/Nexa-Bold.ttf"
                     tools:ignore="MissingPrefix"
                     android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/price_shopper"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textSize="12sp"
                    fontPath="fonts/Nexa-Bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="5dp"/>

                </LinearLayout>
            </LinearLayout>

      </LinearLayout>

    </LinearLayout>

</LinearLayout>
