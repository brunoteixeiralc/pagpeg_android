<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logoStore"
        android:src="@drawable/produto_img"
        tools:ignore="ContentDescription"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Cerveja Skol 18 latinhas"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/product_cart"
                android:src="@drawable/cart_add"
                tools:ignore="ContentDescription"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>

        </LinearLayout>

         <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

            <TextView
            android:id="@+id/promo"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="R$ 4.00"
            android:textSize="12sp"
            android:background="@drawable/line"
            android:gravity="center"/>

            <TextView
             android:id="@+id/price"
             android:layout_width="0dp"
             android:layout_weight="0.5"
             android:layout_height="wrap_content"
             android:text="R$ 2.00"
                android:gravity="center"
             android:textSize="12sp"
             fontPath="fonts/Nexa-Bold.ttf"
             tools:ignore="MissingPrefix"
             android:textColor="@color/colorPrimary"/>

             <!--<TextView-->
               <!--android:id="@+id/store"-->
               <!--android:layout_width="0dp"-->
               <!--android:layout_weight="0.6"-->
               <!--android:layout_height="wrap_content"-->
               <!--android:text="no Carrefour"-->
               <!--android:gravity="left"-->
               <!--android:textSize="12sp" />-->

         </LinearLayout>

      </LinearLayout>

    </LinearLayout>

</LinearLayout>
